<Page loaded="pageLoaded" xmlns="http://schemas.nativescript.org/tns.xsd"  navigatingTo="pageNavigating" id="landing" class="page" actionBarHidden="true">
	<StackLayout class="labelStack">
		<!-- <Image src="res://logo_login" class="title"/>  -->
		<Label text="Hey there!" class="title"/>

		<Label text="Name" class="prompt"/>

		<TextField hint="Enter your name" text="{{ name }}" autocorrect="false" autocapitalization="none" style="color:white" id="name" class="textField" returnPress="addName" focus="onFocus" blur="onBlur"/>

		<Label text="My last period started on" class="prompt"/>

		<TextField text="{{ periodStartDay }}" keyboardType="dateTime" style="color:white" id="periodStart" class="textField" returnPress="addPeriodStartDay" focus="onFocus" blur="onBlur"/>

		<Label text="My period usually lasts" class="prompt"/>

		<TextField text="{{ periodLength }}" keyboardType="phone" style="color:white" id="periodLength" class="textField" focus="onFocus" blur="onBlur"/>

		<Button text="Get Started" tap="goToContraceptionView" class="nextButton"/>

	</StackLayout>
	 
</Page>