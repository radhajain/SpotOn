<Page loaded="pageLoaded" xmlns="http://schemas.nativescript.org/tns.xsd"  navigatingTo="pageNavigating" id="landing" class="page" actionBarHidden="true">
	<StackLayout class="labelStack">
		<!-- <Image src="res://logo_login" class="title"/>  -->
		<Label text="Hey there!" class="title"/>

		<Label text="Name" class="prompt"/>

		<TextField hint="Enter your name" text="{{ name }}" autocorrect="false" autocapitalization="none" style="color:white" id="name" class="textField" returnPress="addName" focus="onFocus"/>

		<Label text="My last period started on" class="prompt"/>

		<TextField text="{{ periodStartDay }}" keyboardType="dateTime" style="color:white" id="periodStart" class="textField" focus="onFocus"/>

		<!-- Date Picker -->

		<DatePicker visibility="{{ showDatePicker ? 'visible' : 'collapse'}}" date="{{ date }}" style="color:white" maxDate="{{ maxDate }}" id="datePicker" ></DatePicker>

		<Button visibility="{{ showDatePicker ? 'visible' : 'collapse'}}" text="Done" tap="setDate" class="doneBtn"/>

		<!-- End Date Picker -->

		<Label text="# Days my period usually lasts" class="prompt"/>

		<TextField text="{{ periodLength }}" keyboardType="phone" style="color:white" id="periodLength" class="textField" focus="onFocus"/>

		<Button text="Next" tap="goToContraceptionView" class="nextButton"/>

	</StackLayout>
	 
</Page>