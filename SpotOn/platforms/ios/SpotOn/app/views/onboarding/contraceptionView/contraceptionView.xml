<Page loaded="pageLoaded" xmlns="http://schemas.nativescript.org/tns.xsd"  navigatingTo="pageNavigating" id="contraception" class="page" actionBarHidden="true">
	<StackLayout class="labelStack">
		<Image src="res://gettingStarted" stretch="aspectFit" class="oval"></Image>

		<Label text="Form of contraception" class="prompt"/>

		<GridLayout rows="*,*,*,*" columns="*" class="grid">
			<Button row="0" col="0" text="Pill" tap="setPill" class="buttonOption" id="pillBtn"/>
			<Button row="1" col="0" text="Other" tap="setOther" class="buttonOption" id="otherBtn"/>
			<Button row="2" col="0" text="None" tap="setNone" class="buttonOption" id="noneBtn"/>
		</GridLayout>

		<Image src="res://RightArrow" stretch="aspectFit" tap="goToPeriodView" class="arrow"/>

	</StackLayout>

</Page>
